<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="8dp"
    android:paddingTop="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <ImageView
        android:id="@+id/empleado_imagen"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

    <TextView
        android:id="@+id/empleado_nombre"
        android:layout_width="wrap_content"
        android:layout_toEndOf="@id/empleado_imagen"
        android:layout_marginStart="14dp"
        tools:text="Jose Madriz"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/empleado_puesto"
        android:layout_toEndOf="@id/empleado_imagen"
        android:layout_marginStart="14dp"
        android:layout_below="@id/empleado_nombre"
        android:layout_width="wrap_content"
        tools:text="Administrador de base de datos"
        android:layout_height="wrap_content"/>



</RelativeLayout>